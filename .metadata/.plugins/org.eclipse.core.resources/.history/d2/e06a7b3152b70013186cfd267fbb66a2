package pretty;

public class PrettyPrint {
	public static void printRectangle(int height, int width)			// read name of shape- system.outprint	//ignore uppercase case using = S.equalsIgnorecase
	{	// h= 1 w=7
		System.out.print("+");
		int i = 0;
		while (i < width) {
			System.out.print('-');
			i++;
		} 
		
  		System.out.print("+");
		System.out.println();
		
		int j = 0;
		while (j < height) {
			System.out.print('|');
		
			i = 0;
			while (i < width) {				// to print or shift the cursor to other side
				System.out.print(" ");
				i++;
			} 
			
			System.out.print('|');
			System.out.println();
			j++;
		} 
		
		System.out.print("+");
		i = 0;
		while (i < width) {
			System.out.print('-');
			i++;
		} 
		System.out.print("+");
	}
	
	
