	}
	
	
	public static void printDiamond(int size) 
	{
	

	}

	
	public static void main(String[] args) 
	{
		int height = 1;
		int width = 7;
		printRectangle(height,width);
		int i= 0;
		int j= 0;
		while (i< width-1); { 
			System.out.print('-');
		}while (j<height-1); {
			System.out.print('|');
		}
		


	}

}
