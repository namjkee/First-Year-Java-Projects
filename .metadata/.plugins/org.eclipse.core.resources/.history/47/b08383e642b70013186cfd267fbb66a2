package pretty;

public class PrettyPrint {
	
	public static void printRectangle(int height, int width)			// read name of shape- system.outprint	//ignore upperlower case using = S.equalsIgnorecase
	{	
		System.out.print("+");
		int i= 0;
		while (i<width) {
			System.out.print('-');
			i++;
		}
		System.out.print("+");
		System.out.println();
		int j= 0;
		while (j<height) {
			System.out.print('|');
		
			i= 0;
			while (i<width) {				// "while loop" nested in another "while loop"
				System.out.print(" ");
				i++;
			}
			System.out.print('|');
			j++;
		}
		System.out.println();
		System.out.print("+");
		i=0;
		while (i<width) {
			System.out.print('-');
			i++;
		}
		System.out.println("+");
	}
	
